<?xml version="1.0"?>

<ruleset name="HowdyQB">

    <arg name="extensions" value="php"/>
    <arg name="parallel" value="40" />
    <arg value="ps" />
	<arg name="colors" />

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>.github/*</exclude-pattern>

	<rule ref="WordPress.Security"></rule>
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed"></rule>
	<rule ref="Generic.WhiteSpace.ScopeIndent.Incorrect"></rule>
    <rule ref="Squiz.Commenting.DocCommentAlignment" />
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine" />
    <rule ref="Squiz.Classes.ClassDeclaration.OpenBraceNewLine" />
</ruleset>
